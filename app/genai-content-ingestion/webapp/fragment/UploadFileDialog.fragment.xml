<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">

    <Dialog id="myUploadDialog" title="Upload file" type="Message" stretchOnPhone="true">
        <content>
            <VBox class="sapUiSmallMargin">
                
                <!-- File field -->
                <VBox class="sapUiTinyMarginBottom">
                    <Label text="Select File" required="true" />
                    <HBox>
                      <u:FileUploader 
                id="__fileUploader" 
                width="300px"
                tooltip="Choose file to be uploaded"
                maximumFileSize='50'
                class="sapUiTinyMarginBottom" 
                 change=".onFileChange"
                buttonText="Browse" />
                    </HBox>
                </VBox>

                <!-- File Type -->
                <VBox class="sapUiTinyMarginBottom">
                    <Label text="File Type" required="true" />
                    <Select id="fileTypeSelect"
                            width="100%"
                            items="{ path: '/FileType' }"
                            change=".onFileTypeChange"  
                        
                            >
                      
                        <core:ListItem key="{ID}" text="{fileType}" />
                    </Select>
                    <HBox>
                        <Link text="Download latest metadata file" press=".onDownloadMetadata" />
                        <Text class="sapUiTinyMarginBegin" text="and edit it before uploading." />
                    </HBox>
                </VBox>

                <!-- Team -->
                <VBox class="sapUiTinyMarginBottom">
                    <Label text="Team" required="true" />
            <Select id="teamSelect"
                            width="100%"
                           items="{path: 'teamModel>/selectedTeams'}"
                            change=".onTeamChange"
                          selectedKey=""
                            >  
                                               
                       <core:ListItem key="{teamModel>ID}" text="{teamModel>team}" />
                 </Select>
                  <HBox>
                     <Text text="Only the members of this team will have access to the file" />
                    </HBox>
                </VBox>

            </VBox>
        </content>

        <buttons>
            <Button id="cancelBtn" text="Cancel" press=".onCancelUpload" />
            <Button id="uploadBtn" text="Upload" type="Emphasized" press=".onConfirmUpload" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
