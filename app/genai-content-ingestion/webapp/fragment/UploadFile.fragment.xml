<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified">

   <OverflowToolbar width="100%" >
        <Image id="logo" src="{imageModel>/path}/images/FinSight.png"  decorative="true" class="logo"/>
    </OverflowToolbar>

    <VBox>
       <Title text="Upload Content" level="H1"  class="sapUiSmallMarginTop largeBoldTitle"  />
        <!-- Label above -->
        <Label text="Use Case" required="true"  class="sapUiSmallMarginTop smallBoldTitle" />

        <!-- Row: dropdown + button -->
        <HBox alignItems="Center" justifyContent="Start">
            <Select id="categorySelect"
                width="300px"
                items="{
                    path: '/AppSelection'
                }"
                change=".extension.genaicontentingestion.controller.CustomExpandedHeader.onUseCaseChange">
                <core:ListItem key="{ID}" text="{AppName}" />
            </Select>

            <Button 
                id="__uploaderButton" 
                text="Add Attachment" 
                press=".extension.genaicontentingestion.controller.CustomExpandedHeader.onUploadPress"
                type="Emphasized" 
                class="sapUiSmallMarginBegin "
                enabled="{authModel>/isMaker}" />
        </HBox>
    </VBox>

</core:FragmentDefinition>
