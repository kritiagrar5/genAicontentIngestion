<mvc:View controllerName="genaicontentingestion.controller.MainView"
   xmlns:mdc="sap.ui.mdc" xmlns:macros="sap.fe.macros" xmlns:filterbar="sap.ui.comp.filterbar" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:m="sap.m"
    displayBlock="true">
    <Page id="page" title="{i18n>title}" showFooter="true">
 
        
        <!-- Dropdown -->
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Select Your App" />
              <Select id="categorySelect"
        items="{
          path: '/AppSelection'
        }"
        change="onCategoryChange">
    <core:ListItem key="{ID}" text="{AppName}" />
</Select>
            </VBox>

          </content>

        <!-- Footer -->
        <footer>
            <Bar>
                <contentRight>
                    <Button 
                        id="approveButton"
                        text="Approve" 
                        type="Accept" 
                        icon="sap-icon://accept" 
                        press="onApproveFiles" />
                    
                    <Button 
                        id="rejectButton"
                        text="Reject" 
                        type="Reject" 
                        icon="sap-icon://decline" 
                        press="onRejectFiles" />
                </contentRight>
            </Bar>
        </footer>
  
    </Page>
</mvc:View>